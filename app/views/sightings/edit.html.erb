<h1>Edit Sighting</h1>

<% if @sighting.errors.any? %>
  <h3> Please fix these errors: </h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%=message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sightings/<%=@sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="sighting_name" name="name" type="text" value="<%= @sighting.name %>">
  <button class="btn btn-danger">Update Sighting</button>
</form>
