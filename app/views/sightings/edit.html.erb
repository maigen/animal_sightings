<h1>Edit Sighting</h1>

<% if @sighting.errors.any? %>
  <h3> Please fix these errors: </h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%=message %></li>
    <% end %>
  </ul>
<% end %>
<form action="/sightings/<%= @sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label class="sp-label">Species spotted:
    <select name="species_id">
      <% @all_species.each do |species| %>
        <option <% if @sighting.species_id == species.id %>
          selected
          <% end %>
         value="<%= species.id %>"><%= species.name %></option>
      <% end %>
    </select>
  </label>

  <label class="sp-label">In what region:
    <select name="regions_id">
      <% @regions.each do |region| %>
        <option <% if @sighting.regions_id == region.id %>
         selected
          <% end %>
        value="<%= region.id %>"><%= region.name %></option>
      <% end %>
    </select>
  </label>


  <label class="sp-label">Date:
    <input type="date" name="date" value="<%=@sighting.date %>"><span>yyyy/mm/dd</span>
  </label>

  <label class="sp-label">Time:
    <input type="time" name="time" value="<%=@sighting.time %>"><span>hh:mm</span>
  </label>
  <button class="btn btn-danger">Update Sighting</button>
</form>


